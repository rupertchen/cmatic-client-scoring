<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
	width="400" height="300"
	layout="absolute">

	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;

			[Bindable]
			public var scorings:ArrayCollection;
		]]>
	</mx:Script>

	<mx:DataGrid
		width="100%" height="100%"
		draggableColumns="false"
		dataProvider="{scorings}"
		editable="true">
		<mx:columns>
			<mx:DataGridColumn
				dataField="id"
				headerText="Id"
				editable="false"/>
			<mx:DataGridColumn
				dataField="order"
				headerText="Order"
				editable="false"/>
			<mx:DataGridColumn
				dataField="name"
				headerText="Name"
				editable="false"/>
			<mx:DataGridColumn
				dataField="score1"
				headerText="Score 1"/>
			<mx:DataGridColumn
				dataField="score2"
				headerText="Score 2"/>
			<mx:DataGridColumn
				dataField="finalScore"
				headerText="Final Score"
				editable="false"/>
			<mx:DataGridColumn
				width="50"
				editable="false"
				itemRenderer="com.serkanet.trial.scoringdataentry.views.components.CommitScoring">
			</mx:DataGridColumn>
		</mx:columns>
	</mx:DataGrid>

	<mx:ControlBar horizontalAlign="right">
		<mx:Button label="Foo"/>
		<mx:Button label="Bar"/>
	</mx:ControlBar>
</mx:Panel>
